<Window x:Class="Whattodoifbored.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="1420" Width="1526"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico" Background="#FFFFF7EF" WindowState="Maximized">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Margin="0,60,0,0" Width="394">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="#FFFFF7EF"/>
                        <Setter Property="BorderBrush" Value="#FFFFF7EF"/>
                        <Setter Property="FontFamily" Value="Inter"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF5AA8E8"/>
                                <Setter Property="FontSize" Value="22"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>

                <Button Content="Random" Margin="0,0,30,0" Click="Button_Click"/>
                <Button Content="Filter" Margin="0,0,30,0" Click="filter_Click"/>
                <Button Content="Profile" Margin="0,0,30,0" Foreground="#FF5AA8E8" FontSize="22"/>
                <Button Content="About app" Click="Button_Click_1"/>
            </StackPanel>
            <Image x:Name="img1" Width="202" Height="202" Source="/left.png"
                HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Image x:Name="img2" Width="212" Height="212" Source="/right.png"
                HorizontalAlignment="Left" Margin="1286,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Image x:Name="img3" Width="231" Height="231" Source="/blue.png"
                HorizontalAlignment="Left" Margin="34,0,0,48" VerticalAlignment="Bottom" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Image x:Name="img4" Width="249" Height="249" Source="/green.png"
                HorizontalAlignment="Right" Margin="0,0,6,20" VerticalAlignment="Bottom" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Label x:Name="HelloLabel" Content="Hello, [Username]!" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One Regular" FontSize="60"/>
            <Label Content="Edit profile:" HorizontalAlignment="Left" Margin="140,345,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="25"/>
            <Border x:Name="loginbox1" CornerRadius="10" BorderBrush="#FF9C9C9C" BorderThickness="1" Background="#FFFFF7EF" Width="324" Height="42" Margin="146,448,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid>
                    <TextBox x:Name="loginbox" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontFamily="Inter" 
                        FontSize="18" 
                        Foreground="Black"
                        VerticalContentAlignment="Center"
                        Padding="10,0,0,0"
                        PreviewTextInput="loginbox_PreviewTextInput"
                        TextChanged="loginbox_TextChanged"/>
                </Grid>
            </Border>
            <Label Content="Login" HorizontalAlignment="Left" Margin="140,410,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="15" Foreground="#FF9C9C9C" RenderTransformOrigin="0.476,-0.458"/>
            <Border x:Name="loginbox2" CornerRadius="10" BorderBrush="#FF9C9C9C" BorderThickness="1" Background="#FFFFF7EF" Width="324" Height="42" Margin="588,447,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid>
                    <TextBox x:Name="emailbox" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontFamily="Inter" 
                        FontSize="18" 
                        Foreground="Black"
                        VerticalContentAlignment="Center"
                        Padding="10,0,0,0"
                        PreviewTextInput="emailbox_PreviewTextInput"
                        TextChanged="emailbox_TextChanged"/>
                </Grid>
            </Border>
            <Label Content="Email address" HorizontalAlignment="Left" Margin="582,409,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="15" Foreground="#FF9C9C9C" RenderTransformOrigin="0.476,-0.458"/>
            <Button x:Name="editbutton" Content="Edit information" HorizontalAlignment="Left" Margin="1033,443,0,0" VerticalAlignment="Top"
                Height="46" Width="308" Background="#FF5AA8E8" BorderBrush="#FF5AA8E8"
                Foreground="White" FontFamily="Inter" FontSize="15" Cursor="Hand" Click="autorizbutton_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3F85C1"/>
                                <!-- темнее -->
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3F85C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Grid>
                <!-- Определяем строки для размещения всех трёх блоков -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Первый блок -->
                    <RowDefinition Height="Auto" />
                    <!-- Второй блок -->
                    <RowDefinition Height="Auto" />
                    <!-- Третий блок -->
                </Grid.RowDefinitions>

                <!-- Первый блок: Favorite -->
                <Grid x:Name="carrd" Margin="140,539,140,0" VerticalAlignment="Top" Grid.Row="0">
                    <Rectangle Height="1" Stroke="Gray" VerticalAlignment="Top"/>
                    <Label Content="Favorite activities:" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top"
               FontFamily="Inter" FontSize="25"/>
                    <Label x:Name="smallTextLabel" Content="You don't have any favorite activities"
               HorizontalAlignment="Left" Margin="490,86,0,50" VerticalAlignment="Top"
               FontFamily="Inter" FontSize="15" Foreground="#FFB2B2B2" Visibility="Collapsed"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                          Margin="0,50,0,0" Padding="0,40,0,10" Grid.Row="0">
                            <WrapPanel x:Name="activityWrapPanel"
                           ItemWidth="430"
                           ItemHeight="440"
                           Orientation="Horizontal"/>
                        </ScrollViewer>
                        <Rectangle Height="1" Margin="0,50,0,0" Stroke="Gray" VerticalAlignment="Bottom" Grid.Row="1"/>
                    </Grid>
                </Grid>

                <!-- Второй блок: Completed -->
                <Grid x:Name="completedActivitiesCard" Margin="140,0,140,0" VerticalAlignment="Top" Grid.Row="1">
                    <Label Content="Completed activities:" HorizontalAlignment="Left" Margin="0,27,0,0"
               VerticalAlignment="Top" FontFamily="Inter" FontSize="25"/>
                    <Label x:Name="completedSmallTextLabel" Content="You don't have any completed activities"
               HorizontalAlignment="Left" Margin="490,86,0,50" VerticalAlignment="Top"
               FontFamily="Inter" FontSize="15" Foreground="#FFB2B2B2" Visibility="Collapsed"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                          Margin="0,50,0,0" Padding="0,40,0,10" Grid.Row="0">
                            <WrapPanel x:Name="completedActivityWrapPanel"
                           ItemWidth="430"
                           ItemHeight="440"
                           Orientation="Horizontal"/>
                        </ScrollViewer>
                        <Rectangle Height="1" Margin="0,50,0,0" Stroke="Gray" VerticalAlignment="Bottom" Grid.Row="1"/>
                    </Grid>
                </Grid>

                <!-- Третий блок: Favorite + Completed -->
                <Grid x:Name="likedAndCompletedCard" Margin="140,0,140,270" VerticalAlignment="Top" Grid.Row="2">
                    <Label Content="Liked and completed activities:" HorizontalAlignment="Left" Margin="0,27,0,0"
               VerticalAlignment="Top" FontFamily="Inter" FontSize="25"/>
                    <Label x:Name="likedCompletedSmallTextLabel" Content="You don't have any liked and completed activities"
               HorizontalAlignment="Left" Margin="450,86,0,50" VerticalAlignment="Top"
               FontFamily="Inter" FontSize="15" Foreground="#FFB2B2B2" Visibility="Collapsed"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                          Margin="0,50,0,0" Padding="0,40,0,10" Grid.Row="0">
                        <WrapPanel x:Name="likedAndCompletedWrapPanel"
                           ItemWidth="430"
                           ItemHeight="440"
                           Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
