<Window x:Name="Mainform" x:Class="Whattodoifbored.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="836" Width="1440"
        Background="#FFF7EF" WindowState="Maximized"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico">
    <Grid x:Name="firstwin" Width="1440" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button_get" Content="Get an idea!" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FF5AA8E8"
                Width="260" Height="58" Foreground="White" FontFamily="Inter" FontSize="20" BorderBrush="#FF5AA8E8" Cursor="Hand" Margin="0,414,0,0" Click="button_get_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="#FF5AA8E8" BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="30">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3F91D2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="rotateImg1" Storyboard.TargetProperty="Angle" To="15" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg2" Storyboard.TargetProperty="Angle" To="-15" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg3" Storyboard.TargetProperty="Angle" To="20" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg4" Storyboard.TargetProperty="Angle" To="-20" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="rotateImg1" Storyboard.TargetProperty="Angle" To="0" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg2" Storyboard.TargetProperty="Angle" To="0" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg3" Storyboard.TargetProperty="Angle" To="0" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="rotateImg4" Storyboard.TargetProperty="Angle" To="0" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Label x:Name="label_whattodo" Content="What to do when bored?" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One" FontSize="65"/>
        <Image x:Name="img1" Width="202" Height="202" Source="/left.png"
               HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="rotateImg1" Angle="0"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="img2" Width="212" Height="212" Source="/right.png"
               HorizontalAlignment="Left" Margin="1218,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="rotateImg2" Angle="0"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="img3" Width="231" Height="231" Source="/blue.png"
               HorizontalAlignment="Left" Margin="10,602,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="rotateImg3" Angle="0"/>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="img4" Width="249" Height="249" Source="/green.png"
               HorizontalAlignment="Left" Margin="1209,542,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="rotateImg4" Angle="0"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
