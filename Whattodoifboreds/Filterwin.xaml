<Window x:Class="Whattodoifbored.Filterwin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="1015" Width="1526" WindowState="Maximized" Background="#FFFFF7EF"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Grid Width="1579" x:Name="card">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="560"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Margin="0,60,0,0" Width="408">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="#FFFFF7EF"/>
                        <Setter Property="BorderBrush" Value="#FFFFF7EF"/>
                        <Setter Property="FontFamily" Value="Inter"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF5AA8E8"/>
                                <Setter Property="FontSize" Value="22"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Button Content="Random" Margin="0,0,30,0" Click="but_Click"/>
                <Button Content="Filter" Margin="0,0,30,0" Foreground="#FF5AA8E8" FontSize="22"/>
                <Button Content="Profile" Margin="0,0,30,0" Click="pro_Click"/>
                <Button Content="About app" Click="ab_Click"/>
            </StackPanel>
            <Image x:Name="img1" Width="202" Height="202" Source="/left.png"
            HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Image x:Name="img2" Width="212" Height="212" Source="/right.png"
            HorizontalAlignment="Left" Margin="1286,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>
            <Label x:Name="label_whattodo" Content="What kind of fun do you want?" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One" FontSize="55" Height="90" Width="793"/>
            <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="860" Height="119" Margin="0,386,0,0"
        Background="White" CornerRadius="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="1" Opacity="0.1"/>
                </Border.Effect>
            </Border>
            <Label Content="type:" HorizontalAlignment="Left" Height="27" Margin="396,403,0,0" VerticalAlignment="Top" Width="50" FontFamily="Inter" FontSize="15"/>
            <Label Content="participants:" HorizontalAlignment="Left" Height="27" Margin="619,403,0,0" VerticalAlignment="Top" Width="100" FontFamily="Inter" FontSize="15"/>
            <Label Content="duration:" HorizontalAlignment="Left" Height="27" Margin="841,403,0,0" VerticalAlignment="Top" Width="75" FontFamily="Inter" FontSize="15"/>
            <Canvas>
                <Grid Width="183" Height="39" Canvas.Left="401" Canvas.Top="443" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border Width="183" Height="39" CornerRadius="20"
                Background="White" BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="SelectedText"
                           VerticalAlignment="Center" Margin="10,0,30,0"
                           Foreground="Black" FontSize="14" FontFamily="Inter"/>
                            <Button x:Name="DropdownButton"
                        Content="▼"
                        Width="30" Height="30"
                        HorizontalAlignment="Right" Margin="0,4,4,4"
                        Background="Transparent" BorderThickness="0"
                        Cursor="Hand" Click="DropdownButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <Popup x:Name="PopupList"
               PlacementTarget="{Binding ElementName=DropdownButton}"
               Placement="Bottom"
               StaysOpen="False">
                        <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                            <ListBox SelectionChanged="ListBox_SelectionChanged"
                         Width="183"
                         BorderThickness="0" x:Name="tupetext">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="Inter"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBoxItem Content="education"/>
                                <ListBoxItem Content="recreational"/>
                                <ListBoxItem Content="social"/>
                                <ListBoxItem Content="diy"/>
                                <ListBoxItem Content="charity"/>
                                <ListBoxItem Content="cooking"/>
                                <ListBoxItem Content="relaxation"/>
                                <ListBoxItem Content="music"/>
                                <ListBoxItem Content="busywork"/>
                            </ListBox>
                        </Border>
                    </Popup>
                </Grid>
            </Canvas>
            <Canvas>
                <Grid Width="183" Height="39" Canvas.Left="624" Canvas.Top="443" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border Width="183" Height="39" CornerRadius="20"
            Background="White" BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="SelectedParticipantsText"
                   VerticalAlignment="Center" Margin="10,0,30,0"
                   Foreground="Black" FontSize="14" FontFamily="Inter"/>
                            <Button x:Name="ParticipantsDropdownButton"
                    Content="▼"
                    Width="30" Height="30"
                    HorizontalAlignment="Right" Margin="0,4,4,4"
                    Background="Transparent" BorderThickness="0"
                    Cursor="Hand" Click="ParticipantsDropdownButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <Popup x:Name="ParticipantsPopupList"
           PlacementTarget="{Binding ElementName=ParticipantsDropdownButton}"
           Placement="Bottom"
           StaysOpen="False">
                        <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                            <ListBox SelectionChanged="ParticipantsListBox_SelectionChanged"
                 Width="183"
                 BorderThickness="0" x:Name="partext">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="Inter"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBoxItem Content="1"/>
                                <ListBoxItem Content="2"/>
                                <ListBoxItem Content="3"/>
                                <ListBoxItem Content="4"/>
                                <ListBoxItem Content="5"/>
                                <ListBoxItem Content="6"/>
                                <ListBoxItem Content="8"/>
                            </ListBox>
                        </Border>
                    </Popup>
                </Grid>
            </Canvas>
            <Canvas>
                <Grid Width="183" Height="39" Canvas.Left="846" Canvas.Top="442" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border Width="183" Height="39" CornerRadius="20"
            Background="White" BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="SelectedDurationText"
                   VerticalAlignment="Center" Margin="10,0,30,0"
                   Foreground="Black" FontSize="14" FontFamily="Inter"/>
                            <Button x:Name="DurationDropdownButton"
                    Content="▼"
                    Width="30" Height="30"
                    HorizontalAlignment="Right" Margin="0,4,4,4"
                    Background="Transparent" BorderThickness="0"
                    Cursor="Hand" Click="DurationDropdownButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    <Popup x:Name="DurationPopupList"
           PlacementTarget="{Binding ElementName=DurationDropdownButton}"
           Placement="Bottom"
           StaysOpen="False">
                        <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                            <ListBox SelectionChanged="DurationListBox_SelectionChanged"
                 Width="183"
                 BorderThickness="0" x:Name="durtext">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="FontFamily" Value="Inter"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBoxItem Content="minutes"/>
                                <ListBoxItem Content="hours"/>
                                <ListBoxItem Content="days"/>
                                <ListBoxItem Content="weeks"/>
                            </ListBox>
                        </Border>
                    </Popup>
                </Grid>
                <Button Height="58" Width="58" 
        Canvas.Left="1061" Canvas.Top="415"
        BorderBrush="{x:Null}" 
        Background="Transparent"
        Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Center" Click="clear_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                    Background="#FF5AA8E8" 
                    CornerRadius="29">
                                <Image Source="/clearing.png" Stretch="None"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF3C8AD6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Height="58" Width="58" 
                    Canvas.Left="1140" Canvas.Top="415"
                    BorderBrush="{x:Null}" 
                    Background="Transparent"
                    Cursor="Hand" Click="search_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                                Background="#FF5AA8E8" 
                                CornerRadius="29">
                                <Image Source="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\search.png" Stretch="None"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF3C8AD6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
            <Grid Grid.Row="1" x:Name="carrd">
                <WrapPanel x:Name="activityWrapPanel"
                   Margin="20, 20, 20, 250"
                   HorizontalAlignment="Center"
                   ItemWidth="430"
                   ItemHeight="440"
                   Orientation="Horizontal"/>
                <Image x:Name="img3" Width="231" Height="231" Source="/blue.png"
HorizontalAlignment="Left" Margin="34,0,0,40" VerticalAlignment="Bottom" Opacity="0.3">
                    <Image.Effect>
                        <BlurEffect Radius="8"/>
                    </Image.Effect>
                </Image>
                <Image x:Name="img4" Width="249" Height="249" Source="/green.png"
    HorizontalAlignment="Right" Margin="0,0,34,40" VerticalAlignment="Bottom" Opacity="0.3">
                    <Image.Effect>
                        <BlurEffect Radius="8"/>
                    </Image.Effect>
                </Image>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
