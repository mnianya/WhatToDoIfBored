<Window x:Class="Whattodoifbored.Buttonwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="882" Width="1526" Background="#FFFFF7EF" WindowState="Maximized"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico">
    <ScrollViewer x:Name="scrollViewer" 
              VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Auto"
              PanningMode="Both" Width="1594">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="img1" Width="202" Height="202" Source="/left.png"
            HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>

            <Image x:Name="img2" Width="212" Height="212" Source="/right.png"
            HorizontalAlignment="Left" Margin="1286,27,0,0" VerticalAlignment="Top" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>

            <Image x:Name="img3" Width="231" Height="231" Source="/blue.png"
            HorizontalAlignment="Left" Margin="34,0,0,40" VerticalAlignment="Bottom" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>

            <Image x:Name="img4" Width="249" Height="249" Source="/green.png"
                HorizontalAlignment="Right" Margin="0,0,34,40" VerticalAlignment="Bottom" Opacity="0.3">
                <Image.Effect>
                    <BlurEffect Radius="8"/>
                </Image.Effect>
            </Image>

            <Label x:Name="label_whattodo" Content="One click and boredom is gone!" HorizontalAlignment="Center" Margin="0,302,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One" FontSize="55"/>
            <Button x:Name="button_get" Content="Get Activity" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FF5AA8E8"
            Width="260" Height="58" Foreground="White" FontFamily="Inter" FontSize="20" BorderBrush="#FF5AA8E8" Cursor="Hand" Margin="0,414,0,0" Click="button_get_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="#FF5AA8E8" BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3F91D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="300" />
                </Grid.RowDefinitions>
                <Grid x:Name="activityPanel" HorizontalAlignment="Center" Margin="0,542,0,0" VerticalAlignment="Top" Visibility="Collapsed">
                    <Border 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="406" 
                Height="402"
                Background="White"
                CornerRadius="30">

                        <Border.Effect>
                            <DropShadowEffect 
                        Color="Black" 
                        BlurRadius="40" 
                        Direction="1" 
                        ShadowDepth="1" 
                        Opacity="0.1"/>
                        </Border.Effect>
                    </Border>
                    <Button x:Name="LikeIcon" Width="49" Height="41" Margin="26,348,332,13"
        Cursor="Hand" BorderThickness="0" Background="Transparent" Click="HeartButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent">
                                    <Image x:Name="btnImage" Source="/heart.png" Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnImage" Property="Source" Value="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\redheart.png"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Button x:Name="DoneIcon" Width="49" Height="41" Margin="332,349,26,12"
        Cursor="Hand" BorderThickness="0" Background="Transparent" Click="DoneButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent">
                                    <Image x:Name="btnImage" Source="/check.png" Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnImage" Property="Source" Value="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\greencheck.png"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image x:Name="ActivityImage" HorizontalAlignment="Left" Height="186" Margin="104,131,0,0" VerticalAlignment="Top" Width="202" Source="/pic1.png"/>
                    <TextBlock x:Name="activityTextBlock" HorizontalAlignment="Left" Margin="62,38,0,0" VerticalAlignment="Top" 
                Width="286" FontFamily="Inter" FontSize="23" FontWeight="Medium" TextWrapping="Wrap" TextAlignment="Center"><Run Text="Learn to greet someone in a new language"/></TextBlock>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Margin="0,60,0,0" Width="394">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Background" Value="#FFFFF7EF"/>
                            <Setter Property="BorderBrush" Value="#FFFFF7EF"/>
                            <Setter Property="FontFamily" Value="Inter"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF5AA8E8"/>
                                    <Setter Property="FontSize" Value="22"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Random" Margin="0,0,30,0" Foreground="#FF5AA8E8" FontSize="22"/>
                    <Button Content="Filter" Margin="0,0,30,0" Click="filter_Click"/>
                    <Button Content="Profile" Margin="0,0,30,0" Click="Button_Click_1"/>
                    <Button Content="About app" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
