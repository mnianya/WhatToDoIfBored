<Window x:Name="about" x:Class="Whattodoifbored.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="889.7" Width="1526"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico" Background="#FFFFF7EF" WindowState="Maximized">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Margin="0,60,0,0" Width="394">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="#FFFFF7EF"/>
                    <Setter Property="BorderBrush" Value="#FFFFF7EF"/>
                    <Setter Property="FontFamily" Value="Inter"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#FF5AA8E8"/>
                            <Setter Property="FontSize" Value="22"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>

            <Button Content="Random" Margin="0,0,30,0" Click="Button_Click"/>
            <Button Content="Filter" Margin="0,0,30,0" Click="filter_Click"/>
            <Button Content="Profile" Margin="0,0,30,0" Click="Button_Click_1"/>
            <Button Content="About app"  Foreground="#FF5AA8E8" FontSize="22"/>
        </StackPanel>
        <Image x:Name="img1" Width="202" Height="202" Source="/left.png"
            HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Opacity="0.3">
            <Image.Effect>
                <BlurEffect Radius="8"/>
            </Image.Effect>
        </Image>
        <Image x:Name="img2" Width="212" Height="212" Source="/right.png"
            HorizontalAlignment="Left" Margin="1286,27,0,0" VerticalAlignment="Top" Opacity="0.3">
            <Image.Effect>
                <BlurEffect Radius="8"/>
            </Image.Effect>
        </Image>
        <Image x:Name="img3" Width="231" Height="231" Source="/blue.png"
            HorizontalAlignment="Left" Margin="34,0,0,48" VerticalAlignment="Bottom" Opacity="0.3">
            <Image.Effect>
                <BlurEffect Radius="8"/>
            </Image.Effect>
        </Image>
        <Image x:Name="img4" Width="249" Height="249" Source="/green.png"
            HorizontalAlignment="Right" Margin="0,0,6,20" VerticalAlignment="Bottom" Opacity="0.3">
            <Image.Effect>
                <BlurEffect Radius="8"/>
            </Image.Effect>
        </Image>
        <TextBlock Text="&quot;What to Do When Bored&quot; is a simple and fun app that helps you find ideas when you don’t know what to do.&#x0a;👉 Filters: Choose the type of activity you’re interested in — like creative, social, solo, or outdoor fun — to get more personalized suggestions.&#x0a;👉 Quick Idea: Or just press the main button and let the app surprise you with a random activity!&#x0a;👉 Favorites &amp; Completed: Save your favorite activities to try again later, and track what you’ve already done in your profile.&#x0a;&#x0a;About the developer:&#x0a;This app was created with ❤️ to make boring moments brighter. Designed and developed by Anna, who loves coding, creativity, and turning small ideas into useful tools."
           TextAlignment="Center"
           TextWrapping="Wrap"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Width="1083"
           FontFamily="Inter"
           FontSize="18"
           Margin="0,339,0,0"/>
        <Label x:Name="label_whattodo" Content="What this app is all about" HorizontalAlignment="Center" Margin="0,208,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One" FontSize="63"/>

    </Grid>
</Window>
