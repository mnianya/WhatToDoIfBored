<Window x:Class="Whattodoifbored.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whattodoifbored"
        mc:Ignorable="d"
        Title="What to do when bored?" Height="890" Width="1440" Background="#FFFFF7EF" WindowState="Maximized"
        Icon="C:\Users\Lenovo\OneDrive\Документы\3 курс\КУРСОВАЯ\Whattodoifbored\pic\pic39.ico">
    <Grid>
        <Image HorizontalAlignment="Left" Height="518" Margin="773,171,0,0" VerticalAlignment="Top" Width="518" Source="/autoriz.png">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/regis.png"/>
            </Image.OpacityMask>
        </Image>
        <Label Content="Sign" HorizontalAlignment="Left" Margin="205,52,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One Regular" FontSize="80"/>
        <Label Content="In" HorizontalAlignment="Left" Margin="378,52,0,0" VerticalAlignment="Top" FontFamily="Cherry Bomb One Regular" FontSize="80" Foreground="#FF5AA8E8"/>

        <Border x:Name="loginbox1" CornerRadius="10" BorderBrush="#FF9C9C9C" BorderThickness="1" Background="#FFFFF7EF" Width="398" Height="50" Margin="159,247,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid>
                <TextBox x:Name="loginbox" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    FontFamily="Inter" 
                    FontSize="18" 
                    Foreground="Black"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    TextChanged="loginbox_TextChanged"
                    PreviewTextInput="loginbox_PreviewTextInput"/>
                <TextBlock x:Name="loginPlaceholder" 
                    Text="Enter login" 
                    Foreground="#FF9C9C9C" 
                    FontFamily="Inter" 
                    FontSize="18"
                    IsHitTestVisible="False"
                    VerticalAlignment="Center"
                    Margin="13,0,-3,0"
                    Visibility="Visible"/>
            </Grid>
        </Border>

        <Border x:Name="emailBoxBorder" Background="#FFFFF7EF" BorderBrush="#FF9C9C9C" BorderThickness="1" CornerRadius="10" Width="398" Height="50" Margin="159,371,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBox x:Name="emailbox" 
                Background="Transparent" 
                BorderThickness="0" 
                FontFamily="Inter" 
                FontSize="18" 
                Foreground="Black" 
                VerticalContentAlignment="Center"
                Padding="10,0,0,0"
                PreviewTextInput="emailbox_PreviewTextInput"
                TextChanged="emailbox_TextChanged"/>
        </Border>
        <Label x:Name="emailPlaceholder" Content="Enter email address" HorizontalAlignment="Left" Margin="169,380,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="18" Foreground="#FF9C9C9C"/>

        <Border x:Name="passwordBoxBorder" Background="#FFFFF7EF" BorderBrush="#FF9C9C9C" BorderThickness="1" CornerRadius="10" Width="398" Height="50" Margin="159,498,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid>
                <!-- Скрытый пароль -->
                <PasswordBox x:Name="passwordBox"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Inter"
                    FontSize="16"
                    Foreground="Black"
                    VerticalContentAlignment="Center"
                    Padding="10,0,35,0"
                    PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- Видимый пароль -->
                <TextBox x:Name="visiblePasswordBox"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Inter"
                    FontSize="16"
                    Foreground="Black"
                    VerticalContentAlignment="Center"
                    Padding="10,0,35,0"
                    Visibility="Collapsed"
                    TextChanged="VisiblePasswordBox_TextChanged"/>

                <!-- Кнопка-глаз -->
                <Button x:Name="togglePasswordVisibilityBtn"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,5,0"
                Click="TogglePasswordVisibilityBtn_Click"
                Cursor="Hand"
                Background="Transparent"
                BorderBrush="Transparent">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                    <Image x:Name="eyeIcon" Width="20" Height="20" Source="/eye.png"/>
                </Button>
            </Grid>
        </Border>
        <Label x:Name="passwordPlaceholder" Content="Enter password" HorizontalAlignment="Left" Margin="169,507,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="18" Foreground="#FF9C9C9C"/>


        <Label Content="Login" HorizontalAlignment="Left" Margin="152,203,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="20" Foreground="#FF9C9C9C" RenderTransformOrigin="0.476,-0.458"/>
        <Label Content="Email address" HorizontalAlignment="Left" Margin="152,327,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="20" Foreground="#FF9C9C9C" RenderTransformOrigin="0.476,-0.458"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="152,454,0,0" VerticalAlignment="Top" FontFamily="Inter" FontSize="20" Foreground="#FF9C9C9C" RenderTransformOrigin="0.476,-0.458"/>
        <Button x:Name="autorizbutton" Content="Back again" HorizontalAlignment="Left" Margin="159,596,0,0" VerticalAlignment="Top"
            Height="46" Width="396" Background="#FF5AA8E8" BorderBrush="#FF5AA8E8"
            Foreground="White" FontFamily="Inter" FontSize="15" Cursor="Hand" Click="autorizbutton_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3F85C1"/>
                            <!-- темнее -->
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF3F85C1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="or" HorizontalAlignment="Left" Margin="346,656,0,0" VerticalAlignment="Top" Foreground="#FF9C9C9C" FontSize="14" RenderTransformOrigin="0.364,-0.02" FontFamily="Inter"/>
        <Label Content="Don't have an account?" HorizontalAlignment="Left" Margin="230,690,0,0" VerticalAlignment="Top" FontSize="15" FontFamily="Inter"/>
        <Button HorizontalAlignment="Left"
             Height="29"
             Margin="406,690,0,0"
             VerticalAlignment="Top"
             Width="58"
             Click="Button_Click"
             Cursor="Hand"
             Background="Transparent"
             BorderBrush="Transparent">     
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="Sign up"
        FontFamily="Inter"
        FontSize="15"
        Foreground="Black"
        TextDecorations="Underline"/>
        </Button>
    </Grid>
</Window>
